<h1 class="text-center">Nueva Pelicula</h1>
 
<div class="text-center center-form">

  <%= form_for @film, url: films_path do |f| %> 
     <div class="form-group">

      <%= f.label :tittle, "Titulo" %>
      <%= f.text_field :tittle, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :year, "AÃ±o" %>
      <%= f.text_field :year, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :raiting, "Puntaje (0-5)" %>
      <%= f.number_field :raiting, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Descripcion" %>
      <%= f.text_area :description, class: "form-control" %>
