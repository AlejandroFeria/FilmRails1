
<h1 class="text-center">Peliculas   <%= link_to "Nueva Pelicula", new_film_path, class: "btn btn-success" %>
  <%= link_to "Mis favoritas", favorites_path, class: "btn btn-primary"%> <%= link_to "Listas de favoritas",   users_path, class: "btn btn-sample"%> </h1>
  <br>



 <table class="table" >
   <thead class="thead-inverse header-table-black">
     <tr>
       <th>Nombre</th>
       <th>Año</th>
       <th>Portada</th>
       <th>Acciones</th>
     </tr>
   </thead>
   <tbody>
     <center> <%= paginate @films%> </center>
     <% @films.each do |film| %>
       <tr>
         <td><%= film.tittle %></td>
         <td><%= film.year %></td>
         <td>
          <%= image_tag film.cover, height: "150" %>
        </td>
         <td>
            <%= link_to "Ver", film_path(film.id), class: "btn btn-primary" %>

            <%= link_to "Editar", edit_film_path(film.id), class: "btn btn-warning" %>
            <%= link_to "Eliminar", film_path(film.id), class: "btn btn-danger", method: :delete %>

            <%= link_to "añadir favorito",  favorite_add_film_path(film.id), class: "btn btn-success", method: :post%>

        </td>

       </tr>
     <% end %>


   </tbody>
 </table>
 <%= paginate @films%>
